<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#4F040620">

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:orientation="vertical"

        >

        <ImageView
            android:id="@+id/alertImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"

            />

        <TextView
            android:id="@+id/good"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/alertImage"
            android:text="Healthy!"
            android:textColor="@color/greenlite"
            android:visibility="gone" />

        <TextView
            android:id="@+id/highsystolic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/alertImage"
            android:text="High Systolic!"
            android:textColor="@color/red"
            android:visibility="gone" />

        <TextView
            android:id="@+id/highdiastolic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/highsystolic"
            android:text="High Diastolic!"
            android:textColor="@color/red"

            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/listllheart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/new_rocker2"
            android:text="Heart Rate : "
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ItemHeartRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/new_rocker2"
            android:text="80"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/listll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listllheart"
        android:layout_marginTop="5dp"

        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/new_rocker2"
            android:text="Systolic :   "
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ItemSystolic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/new_rocker2"
            android:text="80"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/listll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/listll1"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/new_rocker2"
            android:text="Diastolic :  "
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ItemDiastolic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/new_rocker2"
            android:text="120"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/listllcomment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/listll2"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/new_rocker2"
            android:text="Comment :  "
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/listComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/new_rocker2"
            android:text="Nothing"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/listll3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listllcomment"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/clk"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/clock" />

        <TextView
            android:id="@+id/TxtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/new_rocker2"
            android:text=" Time "
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/listll4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listll3"
        android:layout_marginTop="5dp"

        >

        <ImageView
            android:id="@+id/ImgDate"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/dat" />

        <TextView
            android:id="@+id/TxtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ImgDate"
            android:fontFamily="@font/new_rocker2"
            android:text=" Date  "
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/DeleteButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"

            android:src="@drawable/delete" />

        <ImageView
            android:id="@+id/EditButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/DeleteButton"
            android:src="@drawable/wrte"

            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/EditButton"
            android:layout_marginTop="-3dp"
            android:background="@android:color/darker_gray" />


    </RelativeLayout>

</RelativeLayout>